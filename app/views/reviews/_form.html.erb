<% if flash[:notice] %>
	<%= flash[:notice] %>
<% end %>

<% if @product.errors.any? %>
	<ul>
		<% @product.errors.full_messages.each do |msg| %>
			<li><%= msg%></li>
		<% end %>
	</ul>
<% end %>

<%= form_for [@product, @review] do |f| %>
	<%= f.label 	:rating %>
	<%= f.text_field :rating %>
	<br>
	<%= f.label 	:comment %>
	<%= f.text_area :comment %>
	<br>
	<%= f.submit 'Save' %>
<% end %>
<%= link_to('Cancel', product_path(@product)) %>
<% %>